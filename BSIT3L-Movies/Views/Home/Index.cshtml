@model List<MovieViewModel>

@{
    ViewData["Title"] = "Home Page";
}


<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Rating</th>
            <th>Release Year</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    <div class="movieCover"><a href="/movies/getmovie/@movie.Id"><img src="@Url.Content(movie.Cover)" alt="Product Image" width="250" height="300" /></a></div>
                </td>
                <td><a href="/movies/getmovie/@movie.Id"> @movie.Name </a></td>
                <td>@movie.Genre</td>
            </tr>
        }
    </tbody>
</table>

